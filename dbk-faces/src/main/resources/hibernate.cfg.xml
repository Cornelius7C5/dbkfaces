<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="session-factory">
  <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">dbk</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/dbk</property>
  <property name="hibernate.connection.username">dbk</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="show_sql">true</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="pl.spot.dbk.faces.hib.Basket"/>
  <mapping class="pl.spot.dbk.faces.hib.Invoice"/>
  <mapping class="pl.spot.dbk.faces.hib.Item"/>
  <mapping class="pl.spot.dbk.faces.hib.Order"/>
  <mapping class="pl.spot.dbk.faces.hib.Role"/>
  <mapping class="pl.spot.dbk.faces.hib.SalePoint"/>
  <mapping class="pl.spot.dbk.faces.hib.Status"/>
  <mapping class="pl.spot.dbk.faces.hib.User"/>
 </session-factory>
</hibernate-configuration>
